generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id  @default(uuid())  
  nombre    String
  descripcion String
  precio    Float
  imagen    String
  productType MayoristaOrDetal
  categoriaName String
  mayorista Boolean @default(false)
  mayoristaPrice Float @default(0)
  gender Gender @default(Hombre)
  categoria  Categoria @relation(fields: [categoriaName], references: [id])
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Categoria {
  id        String   @id @default(uuid())
  nombre    String
  productes Product[]
}

model Admin {
  id        String   @id @default(uuid())
  nombre    String
  email     String   @unique
  password  String
}

model Promotion {
  id          String   @id @default(uuid())
  titulo      String
  descripcion String
  imagen      String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Mayorista {
  id        String   @id @default(uuid())
  product   String
  price     Float
}

enum Gender {
  All
  Hombre
  Mujer
  Ni√±os
  Parejas
}

enum MayoristaOrDetal {
  Mayorista
  Detal
}