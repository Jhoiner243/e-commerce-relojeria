generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        String   @id  @default(uuid())  
  nombre    String
  precio    Float
  imagen    String
  productType MayoristaOrDetal
  categoriaName String
  categoria  Categoria @relation(fields: [categoriaName], references: [id]) 
}

model Categoria {
  id        String   @id @default(uuid())
  nombre    String
  productes Product[]
}

model Admin {
  id        String   @id @default(uuid())
  nombre    String
  email     String   @unique
  password  String
}

enum MayoristaOrDetal {
  Mayorista
  Detal
}